@model IEnumerable<MIS421FinalProjectGit.Models.MyTransaction>
 
@{
    ViewData["Title"] = "Transactions";
}

 <div class="container-stock-ticker">
         
         <div id="crypto"><i class='fab fa-bitcoin fa-spin fa-3x' style="color:#10316b"></i>Bitcoin  |
         <p id="bitcoin-ticker">----</p> 
         </div>
         <div id="crypto"><i class='fas fa-bomb fa-spin fa-3x'style="color:#f7aa00"></i>Terra  |
         <p id="terra-ticker">----</p> 
         </div>
         <div id="crypto"><i class='fas fa-bomb fa-spin fa-3x'style="color:#613864"></i>cardano  |
         <p id="cardano-ticker">----</p> 
         </div>
         <div id="crypto"><i class='fab fa-ethereum fa-spin fa-3x'style="color:#3a9679"></i>Ethereum
         <p id="stock-ticker">----</p> 
         </div>
    </div>  

    <h1 class="budget-month">This Month</h1>

<div class=lillian>
    <table class="table table-dark">
    <thead>
        <tr>
            <th>
                Type
            </th>
            <th>
                Category
            </th>
            <th>
                Amount
            </th>
            <th>
                Comments
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TransType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransCategory)
            </td>
            <td>
                <p>$@Html.DisplayFor(modelItem => item.Amount)</p>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.comments)
            </td>
            <td>
               <button type="button" class="btn btn-primary btn-pill"><a style="color:white"asp-action="Edit" asp-route-id="@item.TransactionID">Edit</a> </button>
                <button type="button" class="btn btn-primary btn-pill"><a style="color:white" asp-action="Delete" asp-route-id="@item.TransactionID">Delete</a></button>
            </td>
        </tr>
}
    </tbody>
</table>
<button type="button" class="btn btn-primary btn-pill">
    <a style="color:white" asp-action="Create">Add Transaction</a>
</button>

</div>


