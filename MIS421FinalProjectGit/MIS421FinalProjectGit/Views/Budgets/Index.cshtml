@model IEnumerable<MIS421FinalProjectGit.Models.Budget>

@{
    ViewData["Title"] = "Budgets";
}
<head>
    <script src="https://kit.fontawesome.com/bc8d2b84e8.js" crossorigin="anonymous"></script>
</head>


<div class="wrapper">
    <h1 class="budget-month">This Month</h1>
    <div class="balance-container">
    <div class="balance-title">
        <h3>Balance</h3>
        <div id="balance-amount">
            <h1>$      ---</h1>
        </div>
        <div class="budget-add"><a asp-action="Create" class="budget-add"><i class='fas fa-plus fa-stack-1x fa-'>Budget</i></a></div>
    </div>

</div>


<p>
    
</p>
<div id="the-Investments">
    <table class="table-clear">
    <thead>
        <tr id="budget-clicks">
            <th>
                @Html.DisplayNameFor(model => model.BugetItem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserAccountID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr id="budget-clicks">
            <td>
                @Html.DisplayFor(modelItem => item.BugetItem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserAccountID)
            </td>
            <td>
                <a asp-action="Edit" id="budget-clicks" asp-route-id="@item.BudgetID">Edit</a> |
                <a asp-action="Details" id="budget-clicks"asp-route-id="@item.BudgetID">Details</a> |
                <a asp-action="Delete" id="budget-clicks" asp-route-id="@item.BudgetID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>



</div>
