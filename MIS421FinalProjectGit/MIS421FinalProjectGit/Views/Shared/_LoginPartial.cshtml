@using Microsoft.AspNetCore.Identity
@using StudentApp.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

    @{
    ViewData["Title"] = "Login";
}

 <link rel="stylesheet" href="~/css/Index.css" asp-append-version="true" />

 
 
 


@if (SignInManager.IsSignedIn(User))
{

     <li class="nav-item">
          <a class="nav-link" href="~/Bills">Bills</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="~/BudgetViewModel">Budgets</a>
        </li>
        <li class="nav-item">
          <a class="nav-link"  href="~/Transactions">Transactions</a>
        </li>
        <li class="nav-item" id="nav-item-investment">
          <a class="nav-link"  href="~/Investment">Investments</a>
        </li>
         <li class="nav-item">
        <a  class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form   asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link active">Logout</button>
        </form>
    </li>

     @if (User.IsInRole(SD.Admin))
            {
                <li class="nav-item">
                    <a class="nav-link" href="UserRoles">Users</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="RoleManager">Manage Roles</a>
                </li>
              }
        
}
else
{
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}


