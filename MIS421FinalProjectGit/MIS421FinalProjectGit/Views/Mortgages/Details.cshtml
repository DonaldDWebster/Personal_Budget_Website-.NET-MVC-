@model MIS421FinalProjectGit.Models.Mortgage

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Mortgage</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HomePrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HomePrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DownPayment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DownPayment)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LoanAmount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LoanAmount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InterestRate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InterestRate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LoanTermm)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LoanTermm)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AnnualInsurance)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnnualInsurance)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PropertyTaxes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PropertyTaxes)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MonthlyHOA)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MonthlyHOA)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.monthlyPayments)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.monthlyPayments.MonthlyPayments[0])
        </dd>

       
    </dl>
</div>

<dl class="row">

    <dt class="col-sm-2">
        Payment#
    </dt>
    <dt class="col-sm-2">
        Date
    </dt>
    <dt class="col-sm-2">
        Principal Payment
    </dt>
    <dt class="col-sm-2">
        Interest Payment
    </dt>
    <dt class="col-sm-2">
        Total Mortgage Payment
    </dt>
    <dt class="col-sm-2">
        Total Monthly Cost(Includes taxes, HOA, etc)
    </dt>
</dl>

@for (int i = 0; i < (Model.LoanTermm * 12); i++)
{
    <dl class="row">
        <dt class="col-sm-2">
            @i
        </dt>
        <dt class="col-sm-2">
            Date
        </dt>
        <dt class="col-sm-2">
            Principal Payment
        </dt>
        <dt class="col-sm-2">
            Interest Payment
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayFor(model => model.monthlyPayments.MonthlyPayments[i])
        </dt>
        <dt class="col-sm-2">
            Total Monthly Cost(Includes taxes, HOA, etc)
        </dt>
    </dl>
}


<div>
    <a asp-action="Edit" asp-route-id="@Model?.ApplicationUserID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
