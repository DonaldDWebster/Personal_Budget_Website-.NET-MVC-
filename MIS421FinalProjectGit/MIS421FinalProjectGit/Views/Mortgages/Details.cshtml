@model MIS421FinalProjectGit.Models.Mortgage

@{
    ViewData["Title"] = "Amortization Schedule";
}

<h1>Amortization Schedule</h1>

<div>
    <h4>Mortgage</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HomePrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HomePrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DownPayment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DownPayment)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LoanAmount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LoanAmount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InterestRate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InterestRate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LoanTerm)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LoanTerm)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AnnualInsurance)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnnualInsurance)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PropertyTaxes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PropertyTaxes)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MonthlyHOA)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MonthlyHOA)
        </dd>
    </dl>
</div>

<dl class="row">

    <dt class="col-sm-1">
        Payment#
    </dt>
    <dt class="col-sm-1">
        Date
    </dt>
    <dt class="col-sm-2">
        Principal Payment
    </dt>
    <dt class="col-sm-2">
        Interest Payment
    </dt>
    <dt class="col-sm-2">
        Total Mortgage Payment
    </dt>
    <dt class="col-sm-2">
        Remaining Balance
     </dt>
    <dt class="col-sm-2">
        Total Monthly Cost(Includes taxes, HOA, etc)
    </dt>
</dl>

@for (int i = 0; i <= Model.monthlyPayments.lastPaymentNum; i++)
{
    <dl class="row">
        <dt class="col-sm-1">
            @(i+1)   
        </dt>
        <dt class="col-sm-1">
          @*  Date*@
       @*     @Html.Raw(Model.fec_ini.ToString("dd/MM/yyyy"))*@
            @Html.Raw(Model.monthlyPayments.paymentDates[i].ToString("dd/MM/yyyy"))
          @*  @Html.DisplayFor(model => model.monthlyPayments.paymentDates[i])*@
        </dt>
        <dt class="col-sm-2">
            @*Principal Payment*@
            @Html.DisplayFor(model => model.monthlyPayments.principalPayments[i])
        </dt>
        <dt class="col-sm-2">
            @*Interest Payment*@
            @Html.DisplayFor(model => model.monthlyPayments.interestPayments[i])
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayFor(model => model.monthlyPayments.monthlyPayments[i])
        </dt>
        <dt class="col-sm-2">
            @*Remaining Balance*@
            @Html.DisplayFor(model => model.monthlyPayments.remainingBalances[i])
        </dt>
        <dt class="col-sm-2">
            @*Total Monthly Cost(Includes taxes, HOA, etc)*@
            @Html.DisplayFor(model => model.monthlyPayments.monthlyTotalCosts[i])
        </dt>
    </dl>
}


<div>
    <a asp-action="Edit" asp-route-id="@Model?.ApplicationUserID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
